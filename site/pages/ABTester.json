import React, { useState, useEffect } from 'react';
import { base44 } from "@/api/base44Client";
import { Button } from "@/components/ui/button";
import { Textarea } from "@/components/ui/textarea";
import { Loader2, GitCompare, Trophy, XCircle } from "lucide-react";
import { toast } from "sonner";
import { motion } from "framer-motion";

export default function ABTester() {
  const [variants, setVariants] = useState({ A: '', B: '', C: '' });
  const [loading, setLoading] = useState(false);
  const [result, setResult] = useState(null);
  const [profile, setProfile] = useState(null);

  useEffect(() => {
    base44.entities.NexusProfile.list('-created_date', 1).then(res => res.length && setProfile(res[0]));
  }, []);

  const handleCompare = async () => {
    if (!variants.A || !variants.B) {
      toast.error("INSIRA PELO MENOS AS VARIAÇÕES A E B");
      return;
    }
    
    const COST = 20; // High value feature
    if (!profile || profile.credits < COST) {
      toast.error("CRÉDITOS INSUFICIENTES (REQ: 20)");
      return;
    }

    setLoading(true);
    try {
      const response = await base44.integrations.Core.InvokeLLM({
        prompt: `
          ATUE COMO NEXUS. SIMULADOR DE MERCADO E TESTE A/B.
          
          VARIAÇÃO A: "${variants.A}"
          VARIAÇÃO B: "${variants.B}"
          VARIAÇÃO C: "${variants.C}" (Se vazio, ignore)

          Analise qual variação tem maior probabilidade estatística de vitória em engajamento/conversão.
          Seja brutal na crítica.
          
          RETORNE JSON:
          {
            "winner": "A" | "B" | "C",
            "winning_probability": (integer %),
            "reasoning": "explicação curta e grossa",
            "improvement_suggestion": "como tornar a vencedora ainda melhor"
          }
        `,
        response_json_schema: {
          type: "object",
          properties: {
            winner: { type: "string" },
            winning_probability: { type: "integer" },
            reasoning: { type: "string" },
            improvement_suggestion: { type: "string" }
          }
        }
      });

      await base44.entities.NexusProfile.update(profile.id, { credits: profile.credits - COST, total_usage: (profile.total_usage || 0) + 1 });
      setProfile(prev => ({...prev, credits: prev.credits - COST}));
      
      await base44.entities.GenerationLog.create({
        module_id: "AB_TESTER",
        input_summary: "A/B Comparison",
        output_data: JSON.stringify(response),
        cost: COST
      });

      setResult(response);
    } catch (e) {
      console.error(e);
      toast.error("FALHA NA COMPARAÇÃO");
    } finally {
      setLoading(false);
    }
  };

  return (
    <div className="max-w-6xl mx-auto pb-20">
      <div className="border-l-2 border-green-500 pl-6 py-2 mb-8">
        <h2 className="text-3xl font-bold text-white tracking-tighter uppercase flex items-center gap-3">
          <GitCompare className="text-green-500" /> Teste A/B Pré-Postagem
        </h2>
        <p className="text-gray-500 font-mono text-sm mt-1">
          SIMULAÇÃO DE BATALHA DE ALGORITMO // CUSTO: 20 CRD
        </p>
      </div>

      <div className="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        {['A', 'B', 'C'].map((label) => (
          <div key={label} className={`bg-[#0a0a0a] border ${result?.winner === label ? 'border-green-500 shadow-[0_0_15px_rgba(34,197,94,0.2)]' : 'border-gray-800'} p-4 flex flex-col`}>
             <div className="flex justify-between items-center mb-2">
               <span className="font-bold text-white bg-[#111] px-3 py-1 text-sm rounded">VARIAÇÃO {label}</span>
               {result?.winner === label && <Trophy className="w-5 h-5 text-green-500 animate-bounce" />}
             </div>
             <Textarea 
               className="flex-1 bg-[#050505] border-gray-900 min-h-[200px] resize-none"
               placeholder={`Texto da variação ${label}...`}
               value={variants[label]}
               onChange={e => setVariants({...variants, [label]: e.target.value})}
             />
          </div>
        ))}
      </div>

      <div className="flex justify-center mb-12">
        <Button 
          onClick={handleCompare} 
          disabled={loading}
          className="bg-green-700 hover:bg-green-600 text-white px-12 h-14 font-bold tracking-widest text-lg uppercase"
        >
          {loading ? <Loader2 className="animate-spin" /> : "INICIAR SIMULAÇÃO DE BATALHA"}
        </Button>
      </div>

      {result && (
        <motion.div 
          initial={{ opacity: 0, y: 50 }}
          animate={{ opacity: 1, y: 0 }}
          className="bg-[#080808] border border-green-900/50 p-8 max-w-4xl mx-auto relative overflow-hidden"
        >
          <div className="absolute top-0 right-0 w-32 h-32 bg-green-500/10 rounded-full blur-3xl pointer-events-none"></div>
          
          <div className="flex flex-col md:flex-row gap-8 items-center">
             <div className="text-center md:text-left">
               <span className="text-xs text-green-500 uppercase font-bold tracking-widest">VENCEDOR PROJETADO</span>
               <h3 className="text-6xl font-black text-white mb-2">VARIAÇÃO {result.winner}</h3>
               <div className="text-2xl font-mono text-green-400 font-bold">{result.winning_probability}% CHANCE</div>
             </div>
             
             <div className="h-px w-full md:w-px md:h-32 bg-gray-800"></div>
             
             <div className="flex-1 space-y-4">
                <div>
                   <h4 className="text-gray-500 text-xs font-bold uppercase mb-1">Motivo da Vitória</h4>
                   <p className="text-gray-300 text-sm leading-relaxed">{result.reasoning}</p>
                </div>
                <div>
                   <h4 className="text-gray-500 text-xs font-bold uppercase mb-1">Margem de Melhora</h4>
                   <p className="text-gray-300 text-sm leading-relaxed bg-[#111] p-3 border-l-2 border-green-500">
                     {result.improvement_suggestion}
                   </p>
                </div>
             </div>
          </div>
        </motion.div>
      )}

    </div>
  );
}