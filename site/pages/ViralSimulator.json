import React, { useState, useEffect } from 'react';
import { base44 } from "@/api/base44Client";
import { Button } from "@/components/ui/button";
import { Textarea } from "@/components/ui/textarea";
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from "@/components/ui/select";
import { Alert, AlertDescription, AlertTitle } from "@/components/ui/alert";
import { Loader2, Zap, AlertOctagon, Terminal, CheckCircle2 } from "lucide-react";
import { motion, AnimatePresence } from "framer-motion";

export default function ViralSimulator() {
  const [input, setInput] = useState('');
  const [type, setType] = useState('post');
  const [isLoading, setIsLoading] = useState(false);
  const [result, setResult] = useState(null);
  const [error, setError] = useState(null);
  const [profile, setProfile] = useState(null);

  // Load Profile for Credits Check
  useEffect(() => {
    base44.entities.NexusProfile.list('-created_date', 1).then(res => {
      if (res && res.length) setProfile(res[0]);
    });
  }, []);

  const handleSimulate = async () => {
    if (!input.trim()) return;
    
    // 1. Check Credits
    const COST = 5;
    if (!profile || profile.credits < COST) {
      setError("CRÉDITOS INSUFICIENTES. REQUERIDO: 5 CRD.");
      return;
    }

    setIsLoading(true);
    setError(null);
    setResult(null);

    try {
      // 2. AI Execution
      const prompt = `
        ATUE COMO 'NEXUS', UMA IA DE ANÁLISE COMPORTAMENTAL FRIA E AGRESSIVA.
        
        OBJETIVO: Analisar o seguinte texto para potencial viral em redes sociais.
        TIPO DE CONTEÚDO: ${type}
        TEXTO: "${input}"

        RETORNE APENAS JSON. SEM MARKSOWN. SEM CONVERSA.
        SCHEMA:
        {
          "score": (0-100 integer),
          "classification": "FRACO" | "MÉDIO" | "FORTE" | "EXPLOSIVO",
          "killers": ["lista de 3 coisas matando o alcance, seja brutal"],
          "suggestions": ["lista de 3 melhorias práticas e diretas"],
          "analysis": "breve explicação técnica de 2 linhas"
        }
      `;

      const response = await base44.integrations.Core.InvokeLLM({
        prompt: prompt,
        response_json_schema: {
          type: "object",
          properties: {
            score: { type: "integer" },
            classification: { type: "string" },
            killers: { type: "array", items: { type: "string" } },
            suggestions: { type: "array", items: { type: "string" } },
            analysis: { type: "string" }
          }
        }
      });

      // 3. Deduction & Logging
      if (profile) {
        await base44.entities.NexusProfile.update(profile.id, {
          credits: profile.credits - COST,
          total_usage: (profile.total_usage || 0) + 1
        });
        // Update local state immediately for UX
        setProfile(prev => ({...prev, credits: prev.credits - COST}));
      }

      await base44.entities.GenerationLog.create({
        module_id: "VIRAL_SIMULATOR",
        input_summary: input.substring(0, 50),
        output_data: JSON.stringify(response),
        cost: COST
      });

      setResult(response);

    } catch (err) {
      console.error(err);
      setError("FALHA NO SISTEMA DE PROCESSAMENTO. TENTE NOVAMENTE.");
    } finally {
      setIsLoading(false);
    }
  };

  // Score Color Logic
  const getScoreColor = (score) => {
    if (score < 40) return "text-gray-500 border-gray-500";
    if (score < 70) return "text-yellow-500 border-yellow-500";
    if (score < 90) return "text-[#00e5ff] border-[#00e5ff]";
    return "text-[#ff003c] border-[#ff003c] shadow-[0_0_15px_#ff003c]";
  };

  return (
    <div className="max-w-4xl mx-auto space-y-8 pb-20">
      
      {/* Header */}
      <div className="border-l-2 border-[#ff003c] pl-6 py-2">
        <h2 className="text-3xl font-bold text-white tracking-tighter uppercase flex items-center gap-3">
          <Zap className="text-[#ff003c]" /> Simulador de Viralização
        </h2>
        <p className="text-gray-500 font-mono text-sm mt-1">
          ANÁLISE ALGORÍTMICA DE PROBABILIDADE // CUSTO: 5 CRD
        </p>
      </div>

      {/* Input Section */}
      <div className="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div className="md:col-span-3 space-y-4">
          <div className="bg-[#0a0a0a] border border-gray-800 p-1">
            <Textarea 
              placeholder="Cole seu texto aqui para análise..."
              className="min-h-[200px] bg-[#050505] border-none text-gray-300 resize-none focus:ring-1 focus:ring-[#ff003c] font-mono text-sm"
              value={input}
              onChange={(e) => setInput(e.target.value)}
            />
          </div>
          <div className="flex justify-between items-center">
            <div className="flex gap-2">
               {['post', 'legenda', 'comentário'].map((t) => (
                 <button
                    key={t}
                    onClick={() => setType(t)}
                    className={`px-4 py-1 text-xs uppercase font-bold border transition-all ${
                      type === t 
                      ? 'bg-white text-black border-white' 
                      : 'bg-transparent text-gray-600 border-gray-800 hover:border-gray-500'
                    }`}
                 >
                   {t}
                 </button>
               ))}
            </div>
            <span className="text-xs text-gray-500 font-mono">
              {input.length} CARACTERES
            </span>
          </div>
        </div>

        <div className="md:col-span-1 flex flex-col justify-end">
          <Button 
            onClick={handleSimulate}
            disabled={isLoading || !input}
            className="w-full h-16 bg-[#ff003c] hover:bg-[#d60033] text-white font-bold text-lg tracking-widest uppercase rounded-none relative overflow-hidden group"
          >
            {isLoading ? (
              <Loader2 className="animate-spin w-6 h-6" />
            ) : (
              <span className="relative z-10 flex items-center gap-2">
                ANALISAR <Zap className="w-4 h-4 fill-current" />
              </span>
            )}
            {/* Glitch Effect on Hover */}
            <div className="absolute top-0 left-0 w-full h-full bg-white opacity-0 group-hover:opacity-10 transition-opacity" />
          </Button>
          {error && (
             <div className="mt-4 p-3 border border-red-900 bg-red-950/20 text-red-500 text-xs font-mono">
               ERROR: {error}
             </div>
          )}
        </div>
      </div>

      {/* Output Section */}
      <AnimatePresence>
        {result && (
          <motion.div 
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            className="border-t border-gray-900 pt-8"
          >
            <div className="grid grid-cols-1 md:grid-cols-12 gap-8">
              
              {/* Score Display */}
              <div className="md:col-span-4 flex flex-col items-center justify-center p-8 bg-[#0a0a0a] border border-gray-800 relative overflow-hidden">
                 <div className="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-20"></div>
                 <h3 className="text-gray-500 text-xs uppercase tracking-[0.3em] mb-4 z-10">POTENCIAL</h3>
                 <div className={`text-6xl font-black font-mono z-10 border-4 rounded-full w-40 h-40 flex items-center justify-center mb-4 ${getScoreColor(result.score)}`}>
                   {result.score}
                 </div>
                 <div className={`text-2xl font-bold uppercase tracking-tighter ${getScoreColor(result.score).split(' ')[0]}`}>
                   {result.classification}
                 </div>
              </div>

              {/* Analysis Details */}
              <div className="md:col-span-8 space-y-6">
                
                {/* Analysis Text */}
                <div className="p-4 bg-[#0a0a0a] border-l-2 border-gray-800">
                  <h4 className="flex items-center gap-2 text-white font-bold uppercase text-sm mb-2">
                    <Terminal className="w-4 h-4 text-gray-500" /> Diagnóstico
                  </h4>
                  <p className="text-gray-400 text-sm leading-relaxed">{result.analysis}</p>
                </div>

                <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                  {/* Killers */}
                  <div className="space-y-3">
                    <h4 className="text-red-500 font-bold uppercase text-xs tracking-widest flex items-center gap-2">
                      <AlertOctagon className="w-3 h-3" /> PONTOS CRÍTICOS
                    </h4>
                    <ul className="space-y-2">
                      {result.killers.map((k, i) => (
                        <li key={i} className="text-gray-400 text-sm border-b border-gray-900 pb-2 last:border-0">
                          ✕ {k}
                        </li>
                      ))}
                    </ul>
                  </div>

                  {/* Suggestions */}
                  <div className="space-y-3">
                    <h4 className="text-[#00e5ff] font-bold uppercase text-xs tracking-widest flex items-center gap-2">
                      <CheckCircle2 className="w-3 h-3" /> OTIMIZAÇÃO
                    </h4>
                    <ul className="space-y-2">
                      {result.suggestions.map((s, i) => (
                        <li key={i} className="text-gray-300 text-sm border-b border-gray-900 pb-2 last:border-0">
                          → {s}
                        </li>
                      ))}
                    </ul>
                  </div>
                </div>

              </div>
            </div>
          </motion.div>
        )}
      </AnimatePresence>

    </div>
  );
}