import React, { useEffect, useState } from 'react';
import { base44 } from "@/api/base44Client";
import { Loader2 } from "lucide-react";

export default function HistoryPage() {
  const [logs, setLogs] = useState([]);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    base44.entities.GenerationLog.list('-created_date', 50).then(res => {
      setLogs(res);
      setLoading(false);
    });
  }, []);

  return (
    <div className="max-w-5xl mx-auto">
      <h1 className="text-3xl font-bold text-white tracking-tighter mb-8 border-b border-gray-800 pb-4">
        LOG DE OPERAÇÕES
      </h1>

      {loading ? (
        <div className="flex justify-center p-12">
          <Loader2 className="animate-spin text-[#ff003c]" />
        </div>
      ) : (
        <div className="space-y-4">
          {logs.map((log) => (
            <div key={log.id} className="bg-[#0a0a0a] border border-gray-800 p-4 hover:border-gray-600 transition-colors group">
              <div className="flex justify-between items-start mb-2">
                <span className="text-[#ff003c] font-mono text-xs font-bold uppercase">
                  {log.module_id}
                </span>
                <span className="text-gray-600 text-xs font-mono">
                  {new Date(log.created_date).toLocaleString()}
                </span>
              </div>
              <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <p className="text-xs text-gray-500 uppercase mb-1">INPUT</p>
                  <p className="text-gray-300 text-sm line-clamp-2 font-mono bg-[#050505] p-2 border border-gray-900">
                    {log.input_summary}
                  </p>
                </div>
                <div>
                   <p className="text-xs text-gray-500 uppercase mb-1">RESULTADO (RAW)</p>
                   <p className="text-gray-400 text-xs line-clamp-2 font-mono bg-[#050505] p-2 border border-gray-900">
                     {log.output_data}
                   </p>
                </div>
              </div>
              <div className="mt-2 text-right">
                <span className="text-xs text-gray-700">CUSTO: {log.cost} CRD</span>
              </div>
            </div>
          ))}
          {logs.length === 0 && (
             <p className="text-gray-500 text-center py-10">Nenhum registro encontrado.</p>
          )}
        </div>
      )}
    </div>
  );
}