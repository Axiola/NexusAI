import React, { useState, useEffect } from 'react';
import { base44 } from "@/api/base44Client";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Table, TableBody, TableCell, TableHead, TableHeader, TableRow } from "@/components/ui/table";
import { Card, CardHeader, CardTitle, CardContent } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Tabs, TabsContent, TabsList, TabsTrigger } from "@/components/ui/tabs";
import { 
  ShieldAlert, 
  Search, 
  RefreshCw, 
  UserX, 
  UserCheck, 
  Coins, 
  Activity, 
  Lock, 
  Unlock 
} from "lucide-react";
import { toast } from "sonner";
import { Navigate } from 'react-router-dom';

export default function Admin() {
  const [profile, setProfile] = useState(null);
  const [users, setUsers] = useState([]);
  const [loading, setLoading] = useState(true);
  const [searchTerm, setSearchTerm] = useState('');
  const [systemStats, setSystemStats] = useState({ totalCredits: 0, activeUsers: 0 });

  useEffect(() => {
    checkPermission();
  }, []);

  const checkPermission = async () => {
    const user = await base44.auth.me();
    if (!user) return;
    
    const profiles = await base44.entities.NexusProfile.filter({ created_by: user.email });
    if (profiles.length > 0) {
      const p = profiles[0];
      setProfile(p);
      if (p.role === 'admin' || p.role === 'owner') {
        fetchData();
      }
    }
  };

  const fetchData = async () => {
    setLoading(true);
    try {
      // Fetch users
      const res = await base44.entities.NexusProfile.list('-created_date', 50);
      setUsers(res);
      
      // Calculate stats
      const stats = res.reduce((acc, curr) => ({
        totalCredits: acc.totalCredits + (curr.credits || 0),
        activeUsers: acc.activeUsers + (!curr.is_blocked ? 1 : 0)
      }), { totalCredits: 0, activeUsers: 0 });
      setSystemStats(stats);
      
    } catch (e) {
      console.error(e);
      toast.error("Erro ao carregar dados");
    } finally {
      setLoading(false);
    }
  };

  const handleUpdateCredits = async (id, current, amount) => {
    try {
      await base44.entities.NexusProfile.update(id, {
        credits: (current || 0) + amount
      });
      toast.success(`Créditos atualizados: ${amount > 0 ? '+' : ''}${amount}`);
      fetchData();
    } catch (e) {
      toast.error("Falha na operação");
    }
  };

  const toggleBlockStatus = async (user) => {
    try {
      await base44.entities.NexusProfile.update(user.id, {
        is_blocked: !user.is_blocked
      });
      toast.success(`Usuário ${!user.is_blocked ? 'BLOQUEADO' : 'DESBLOQUEADO'}`);
      fetchData();
    } catch (e) {
      toast.error("Falha na operação");
    }
  };

  if (!profile) return <div className="p-8 text-center text-gray-500">Carregando permissões...</div>;
  
  // Security Gate
  if (profile.role !== 'admin' && profile.role !== 'owner') {
    return (
      <div className="flex flex-col items-center justify-center min-h-[60vh] text-[#ff003c]">
        <ShieldAlert className="w-16 h-16 mb-4" />
        <h1 className="text-4xl font-bold tracking-tighter">403 FORBIDDEN</h1>
        <p className="font-mono mt-2">ACCESS DENIED TO NEURAL CORE</p>
      </div>
    );
  }

  const filteredUsers = users.filter(u => 
    u.id.includes(searchTerm) || (u.created_by && u.created_by.toLowerCase().includes(searchTerm.toLowerCase()))
  );

  return (
    <div className="max-w-7xl mx-auto animate-in fade-in duration-500">
      <div className="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 border-b border-gray-800 pb-6 gap-4">
        <div>
          <h2 className="text-2xl font-bold text-white flex items-center gap-2 tracking-tighter">
            <ShieldAlert className="text-[#ff003c]" /> PAINEL ADMINISTRATIVO
          </h2>
          <p className="text-xs font-mono text-gray-500 mt-1">
            SESSÃO SEGURA // {profile.role.toUpperCase()} // {new Date().toLocaleDateString()}
          </p>
        </div>
        <div className="flex gap-2">
           <Button variant="outline" onClick={fetchData} className="border-gray-700 hover:bg-[#111]">
             <RefreshCw className="w-4 h-4 mr-2" /> Atualizar
           </Button>
        </div>
      </div>

      <div className="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <Card className="bg-[#0a0a0a] border-gray-800">
          <CardHeader className="pb-2">
            <CardTitle className="text-sm font-medium text-gray-400 uppercase">Usuários Ativos</CardTitle>
          </CardHeader>
          <CardContent>
            <div className="text-2xl font-bold text-white">{systemStats.activeUsers}</div>
          </CardContent>
        </Card>
        <Card className="bg-[#0a0a0a] border-gray-800">
          <CardHeader className="pb-2">
            <CardTitle className="text-sm font-medium text-gray-400 uppercase">Total Créditos em Circulação</CardTitle>
          </CardHeader>
          <CardContent>
            <div className="text-2xl font-bold text-cyan-400">{systemStats.totalCredits}</div>
          </CardContent>
        </Card>
        <Card className="bg-[#0a0a0a] border-gray-800">
          <CardHeader className="pb-2">
            <CardTitle className="text-sm font-medium text-gray-400 uppercase">Módulos Ativos</CardTitle>
          </CardHeader>
          <CardContent>
            <div className="text-2xl font-bold text-green-500">8/8</div>
          </CardContent>
        </Card>
      </div>

      <div className="bg-[#0a0a0a] border border-gray-800 p-4 mb-6 rounded-lg flex gap-4 items-center">
        <Search className="text-gray-500 w-5 h-5" />
        <input 
          className="bg-transparent border-none text-white focus:outline-none w-full font-mono text-sm"
          placeholder="Buscar usuário por ID ou Email..."
          value={searchTerm}
          onChange={e => setSearchTerm(e.target.value)}
        />
      </div>

      <div className="bg-[#0a0a0a] border border-gray-800 rounded-lg overflow-hidden">
        <Table>
          <TableHeader className="bg-[#111]">
            <TableRow className="border-gray-800">
              <TableHead className="text-gray-400 font-mono">USUÁRIO</TableHead>
              <TableHead className="text-gray-400 font-mono">STATUS</TableHead>
              <TableHead className="text-gray-400 font-mono">PLANO</TableHead>
              <TableHead className="text-gray-400 font-mono">CRÉDITOS</TableHead>
              <TableHead className="text-gray-400 font-mono text-right">AÇÕES</TableHead>
            </TableRow>
          </TableHeader>
          <TableBody>
            {filteredUsers.map((user) => (
              <TableRow key={user.id} className="border-gray-800 hover:bg-[#111] transition-colors">
                <TableCell>
                  <div className="flex flex-col">
                    <span className="text-gray-300 text-sm">{user.created_by}</span>
                    <span className="text-gray-600 text-xs font-mono">{user.id}</span>
                  </div>
                </TableCell>
                <TableCell>
                  {user.is_blocked ? (
                    <Badge variant="destructive" className="bg-red-900/50 text-red-400 hover:bg-red-900/50">BLOQUEADO</Badge>
                  ) : (
                    <Badge variant="outline" className="border-green-900 text-green-500">ATIVO</Badge>
                  )}
                </TableCell>
                <TableCell>
                  <span className={`px-2 py-1 rounded text-xs font-bold uppercase ${
                    user.plan === 'elite' ? 'text-purple-400 bg-purple-900/20' : 
                    user.plan === 'pro' ? 'text-cyan-400 bg-cyan-900/20' : 'text-gray-400 bg-gray-800'
                  }`}>
                    {user.plan}
                  </span>
                </TableCell>
                <TableCell className="font-mono text-white font-bold">
                  {user.credits}
                </TableCell>
                <TableCell className="text-right">
                  <div className="flex justify-end gap-2">
                    <Button 
                      size="icon" 
                      variant="outline" 
                      className="h-8 w-8 border-gray-700 hover:border-green-500 hover:text-green-500" 
                      onClick={() => handleUpdateCredits(user.id, user.credits, 50)}
                      title="Adicionar 50 Créditos"
                    >
                      <Coins className="w-4 h-4" />
                    </Button>
                    <Button 
                      size="icon" 
                      variant="outline" 
                      className={`h-8 w-8 border-gray-700 ${user.is_blocked ? 'hover:border-green-500 hover:text-green-500' : 'hover:border-red-500 hover:text-red-500'}`}
                      onClick={() => toggleBlockStatus(user)}
                      title={user.is_blocked ? "Desbloquear" : "Bloquear"}
                    >
                      {user.is_blocked ? <Unlock className="w-4 h-4" /> : <Lock className="w-4 h-4" />}
                    </Button>
                  </div>
                </TableCell>
              </TableRow>
            ))}
          </TableBody>
        </Table>
      </div>
    </div>
  );
}