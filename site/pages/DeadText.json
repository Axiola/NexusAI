import React, { useState, useEffect } from 'react';
import { base44 } from "@/api/base44Client";
import { Button } from "@/components/ui/button";
import { Textarea } from "@/components/ui/textarea";
import { Loader2, TrendingUp, RefreshCcw, Activity } from "lucide-react";
import { toast } from "sonner";
import { motion } from "framer-motion";

export default function DeadText() {
  const [text, setText] = useState('');
  const [loading, setLoading] = useState(false);
  const [result, setResult] = useState(null);
  const [profile, setProfile] = useState(null);

  useEffect(() => {
    base44.entities.NexusProfile.list('-created_date', 1).then(res => res.length && setProfile(res[0]));
  }, []);

  const handleAnalyze = async () => {
    if (!text.trim()) return;
    const COST = 8;
    if (!profile || profile.credits < COST) {
      toast.error("CRÉDITOS INSUFICIENTES (REQ: 8)");
      return;
    }

    setLoading(true);
    try {
      const response = await base44.integrations.Core.InvokeLLM({
        prompt: `
          ATUE COMO NEXUS. EDITOR DE TEXTO HUMANO E IMPERFEITO.
          
          TEXTO ORIGINAL:
          "${text}"

          TAREFA:
          1. Identifique trechos robóticos, chatgpt-like, ou corporativos demais.
          2. Reescreva para soar 100% humano, casual, com ritmo variável e pequenas imperfeições que geram confiança.
          
          RETORNE JSON:
          {
            "dead_phrases": ["frase morta 1", "frase morta 2"],
            "rewritten_text": "texto completo reescrito",
            "why_it_works": "explicação técnica"
          }
        `,
        response_json_schema: {
          type: "object",
          properties: {
            dead_phrases: { type: "array", items: { type: "string" } },
            rewritten_text: { type: "string" },
            why_it_works: { type: "string" }
          }
        }
      });

      await base44.entities.NexusProfile.update(profile.id, { credits: profile.credits - COST, total_usage: (profile.total_usage || 0) + 1 });
      setProfile(prev => ({...prev, credits: prev.credits - COST}));
      
      await base44.entities.GenerationLog.create({
        module_id: "DEAD_TEXT",
        input_summary: text.substring(0, 30) + "...",
        output_data: JSON.stringify(response),
        cost: COST
      });

      setResult(response);
    } catch (e) {
      console.error(e);
      toast.error("ERRO DE PROCESSAMENTO");
    } finally {
      setLoading(false);
    }
  };

  return (
    <div className="max-w-6xl mx-auto pb-20">
      <div className="border-l-2 border-cyan-500 pl-6 py-2 mb-8">
        <h2 className="text-3xl font-bold text-white tracking-tighter uppercase flex items-center gap-3">
          <TrendingUp className="text-cyan-500" /> Detector de Texto Morto
        </h2>
        <p className="text-gray-500 font-mono text-sm mt-1">
          HUMANIZAÇÃO E REMOÇÃO DE PADRÕES IA // CUSTO: 8 CRD
        </p>
      </div>

      <div className="grid grid-cols-1 lg:grid-cols-2 gap-8">
        {/* Input */}
        <div className="space-y-4">
          <div className="bg-[#0a0a0a] p-4 border border-gray-800">
            <div className="flex justify-between mb-2">
              <label className="text-xs text-gray-500 font-bold uppercase">Texto Original (Robótico)</label>
            </div>
            <Textarea 
              value={text}
              onChange={e => setText(e.target.value)}
              className="min-h-[400px] bg-[#050505] border-none text-gray-400 font-mono text-sm leading-relaxed resize-none"
              placeholder="Cole o texto gerado por IA ou corporativo aqui..."
            />
          </div>
          <Button 
            onClick={handleAnalyze} 
            disabled={loading || !text}
            className="w-full bg-cyan-900/50 hover:bg-cyan-900 text-cyan-400 border border-cyan-800 font-bold h-12 uppercase tracking-widest"
          >
            {loading ? <Loader2 className="animate-spin" /> : "VIVIFICAR TEXTO"}
          </Button>
        </div>

        {/* Output */}
        <div className="bg-[#0a0a0a] border border-gray-800 p-6 relative min-h-[500px]">
          {!result ? (
            <div className="absolute inset-0 flex items-center justify-center opacity-20">
              <Activity className="w-24 h-24 text-gray-600" />
            </div>
          ) : (
            <motion.div 
              initial={{ opacity: 0 }}
              animate={{ opacity: 1 }}
              className="space-y-6 h-full flex flex-col"
            >
              <div className="flex-1 space-y-2">
                <label className="text-xs text-cyan-500 font-bold uppercase flex items-center gap-2">
                  <Activity className="w-3 h-3" /> Versão Humanizada (Indetectável)
                </label>
                <div className="prose prose-invert prose-sm max-w-none text-gray-200 font-sans leading-relaxed whitespace-pre-wrap border-l-2 border-cyan-500 pl-4 py-2">
                  {result.rewritten_text}
                </div>
              </div>

              <div className="border-t border-gray-800 pt-4 space-y-4">
                <div>
                  <h4 className="text-xs text-red-500 font-bold uppercase mb-2">Padrões Mortos Detectados:</h4>
                  <div className="flex flex-wrap gap-2">
                    {result.dead_phrases.map((phrase, i) => (
                      <span key={i} className="text-xs bg-red-950/30 text-red-400/70 px-2 py-1 rounded line-through">
                        {phrase}
                      </span>
                    ))}
                  </div>
                </div>
                
                <div className="bg-[#111] p-3 text-xs text-gray-400 font-mono border border-gray-800">
                  <span className="text-cyan-500 font-bold">POR QUE FUNCIONA:</span> {result.why_it_works}
                </div>
              </div>

              <Button 
                variant="outline"
                className="w-full border-gray-700 hover:bg-white hover:text-black mt-auto"
                onClick={() => {navigator.clipboard.writeText(result.rewritten_text); toast.success("Copiado!")}}
              >
                <RefreshCcw className="w-4 h-4 mr-2" /> COPIAR RESULTADO
              </Button>
            </motion.div>
          )}
        </div>
      </div>
    </div>
  );
}